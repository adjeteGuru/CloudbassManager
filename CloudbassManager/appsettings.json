                "AllowNull": true
              },
              {
                "ColumnName": "MutationName",
                "DataType": "varchar",
                "AllowNull": true
              },
              {
                "ColumnName": "MutatedId",
                "DataType": "int",
                "AllowNull": true
              },
              {
                "ColumnName": "Information",
                "DataType": "varchar",
                "AllowNull": true
              }
            ],
            "timeStamp": {
              "columnName": "CreatedAt"
            }

