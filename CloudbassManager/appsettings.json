  "AllowedHosts": "*",

  "ConnectionStrings": {
    "CloudbassDb": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog =GraphQLDB;Trusted_Connection=True;MultipleActiveResultSets=true"

  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.MSSqlServer"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "CloudbassDb",
          "tableName": "Logs",
          "columnOptionsSection": {
            "removeStandardColumns": [ "MessageTemplate", "Properties", "Exception", "Level" ],
            "additionalColumns": [
              {
                "ColumnName": "MutationName",
                "DataType": "varchar",
                "AllowNull": false
              },
              {
                "ColumnName": "MutationId",
                "DataType": "int",
                "AllowNull": false
              }
            ],
            "timeStamp": {
              "columnName": "CreatedAt"
            }
          }
        }
      },
      { "Name": "Console" }
    ]
  }
}
